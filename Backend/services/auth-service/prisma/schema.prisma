// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"  // Changed from "prisma-client"
  output   = "../generated/client"  // Simplified path (remove the dot)
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int       @id @default(autoincrement())
  name                   String
  email                  String    @unique
  passwordHash           String
  mobileNumber           String
  dob                    DateTime
  isAdmin                Boolean   @default(false)
  totalRewardCoins       Int       @default(0)
  currentCarbonFootprint Float?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@map("users")
}